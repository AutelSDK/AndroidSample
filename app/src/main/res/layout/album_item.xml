<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/spinner_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:maxLines="2"
        android:padding="5dp" />

    <TextView
        android:id="@+id/downloadProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_item_text"
        android:padding="5dp" />

    <Button
        android:id="@+id/downloadStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/downloadProgress"
        android:layout_below="@+id/spinner_item_text"
        android:layout_marginLeft="20dp"
        android:text="下载" />

    <Button
        android:id="@+id/downloadCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/downloadStart"
        android:layout_below="@+id/spinner_item_text"
        android:layout_marginLeft="20dp"
        android:text="取消" />
</RelativeLayout>
