<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_remote_img"
        android:layout_width="@dimen/iv_remote_img_width"
        android:layout_height="@dimen/iv_remote_img_height"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:src="@mipmap/remote_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:text="@string/orbit_radius_decrease"
        android:textColor="@color/orbit_advanced_para_text_color"
        android:textSize="@dimen/text_view_size_sp_12"
        app:layout_constraintBottom_toTopOf="@+id/iv_remote_img"
        app:layout_constraintLeft_toLeftOf="@+id/iv_remote_img"
        app:layout_constraintRight_toRightOf="@+id/iv_remote_img" />

    <TextView
        android:id="@+id/down_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="@string/orbit_radius_increase"
        android:textColor="@color/orbit_advanced_para_text_color"
        android:textSize="@dimen/text_view_size_sp_12"
        app:layout_constraintLeft_toLeftOf="@+id/iv_remote_img"
        app:layout_constraintRight_toRightOf="@+id/iv_remote_img"
        app:layout_constraintTop_toBottomOf="@+id/iv_remote_img" />

    <TextView
        android:id="@+id/left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="@string/orbit_ccw"
        android:textColor="@color/orbit_advanced_para_text_color"
        android:textSize="@dimen/text_view_size_sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/iv_remote_img"
        app:layout_constraintRight_toLeftOf="@+id/iv_remote_img"
        app:layout_constraintTop_toTopOf="@+id/iv_remote_img"
        app:layout_constraintVertical_bias="2" />

    <TextView
        android:id="@+id/right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="@string/orbit_cw"
        android:textColor="@color/orbit_advanced_para_text_color"
        android:textSize="@dimen/text_view_size_sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/iv_remote_img"
        app:layout_constraintLeft_toRightOf="@+id/iv_remote_img"
        app:layout_constraintTop_toTopOf="@+id/iv_remote_img"
        app:layout_constraintVertical_bias="2" />

    <ImageView
        android:id="@+id/right_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:src="@mipmap/cw_img"
        app:layout_constraintBottom_toTopOf="@+id/right_tv"
        app:layout_constraintLeft_toLeftOf="@+id/right_tv"
        app:layout_constraintRight_toRightOf="@+id/right_tv" />

    <ImageView
        android:id="@+id/left_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:src="@mipmap/ccw_img"
        app:layout_constraintBottom_toTopOf="@+id/left_tv"
        app:layout_constraintLeft_toLeftOf="@+id/left_tv"
        app:layout_constraintRight_toRightOf="@+id/left_tv" />
</android.support.constraint.ConstraintLayout>