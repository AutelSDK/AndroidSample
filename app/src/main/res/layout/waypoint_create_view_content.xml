<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:src="@mipmap/waypoint_indicate_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/load_waypoint_btn"
        android:layout_width="0dp"
        android:layout_height="@dimen/mission_btn_height"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:background="@drawable/selector_mission_btn"
        android:gravity="center"
        android:text="@string/waypoint_load"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_view_size_sp_16"
        app:layout_constraintBottom_toTopOf="@+id/create_waypoint_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/create_waypoint_btn"
        android:layout_width="0dp"
        android:layout_height="@dimen/mission_btn_height"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:background="@drawable/selector_mission_btn"
        android:gravity="center"
        android:text="@string/waypoint_create"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_view_size_sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>