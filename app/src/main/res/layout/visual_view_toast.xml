<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tracking_bottom_view_toast_height"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tracking_left_margin"
            android:layout_marginTop="@dimen/tracking_margin_top_toast"
            android:gravity="center"
            android:textColor="#656565"
            android:textSize="@dimen/text_view_size_sp_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tracking_toast_height"
            android:layout_below="@+id/tv_title_content"
            android:layout_marginBottom="@dimen/tracking_top_margin"
            android:layout_marginLeft="@dimen/tracking_left_margin"
            android:layout_marginRight="@dimen/tracking_left_margin"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/tracking_toast_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_white_gray"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="@dimen/text_view_size_sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_select_new_target"
                android:layout_width="@dimen/tracking_toast_btn_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tracking_left_margin"
                android:layout_weight="1"
                android:background="@drawable/selector_white_gray"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="@dimen/text_view_size_sp_16"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tv_exit_flight_mode"
                android:layout_width="@dimen/tracking_toast_btn_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tracking_left_margin"
                android:layout_weight="1"
                android:background="@drawable/selector_white_gray"
                android:gravity="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/text_view_size_sp_16"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>