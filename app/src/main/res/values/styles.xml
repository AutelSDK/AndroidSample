<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CodecTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.SeekBar.Setting" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">2dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/layer_list_seekbar_horizontal</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:thumb">@drawable/selector_seekbar_dot</item>
        <item name="android:thumbOffset">10dp</item>
        <item name="android:splitTrack" tools:targetApi="lollipop">false</item>
    </style>

    <style name="RadioButton">
        <item name="android:textColor">@drawable/selector_text_black_white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="waypoint_checkbox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/waypoint_checkbox_icon</item>
    </style>
</resources>
