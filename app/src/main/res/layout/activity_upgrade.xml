<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20px">

        <Button
            android:id="@+id/getFirmwareVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_margin_bottom"
            android:gravity="center"
            android:padding="@dimen/text_padding"
            android:text="GetFirmwareVersion"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/firmwareVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL" />

        <Button
            android:id="@+id/downloadFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_margin_bottom"
            android:gravity="center"
            android:padding="@dimen/text_padding"
            android:text="DownLoadFile"
            android:textAllCaps="false" />

        <LinearLayout
            android:id="@+id/downloadLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/startupgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_margin_bottom"
            android:gravity="center"
            android:padding="@dimen/text_padding"
            android:text="StartUpgrade"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/camera_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAMERA" />

        <TextView
            android:id="@+id/dsp_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DSP" />

        <TextView
            android:id="@+id/dsp_rc_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DSP_RC" />

        <TextView
            android:id="@+id/rc_player_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RC_PLAYER" />
    </LinearLayout>
</ScrollView>